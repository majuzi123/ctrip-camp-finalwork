.container {
  display: flex;
  background: #0388f4;
  height: 400rpx;
  width: 100%;
}
.login_btn {
  margin-left: -65rpx;
}
.login_out {
  font-size: 33;
  color: white;
  margin-top: 20rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  margin-left: 300rpx;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}
/*用css画一个箭头*/
.right_arrow {
  border: solid black;
  border-width: 0 3px 3px 0;
  padding: 3px;
  position: absolute;
  right: 15px;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}
.item {
  display: flex;
  padding: 25rpx;
  background: white;
  align-items: center;
  border-bottom: 1px solid gainsboro;
}
.button {
  width: 100%;
  background: white;
  border: none;
  text-align: left;
  padding: 0px;
  margin: 0px;
  line-height: 1.3;
  font-size: 16px;
}
.button::after {
  border: none;
  border-radius: 0;
}
